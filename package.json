{
  "name": "ezdemoapp",
  "author": {
    "name": "Erdinc Kaya",
    "email": "kaya@hpe.com"
  },
  "license": "MIT",
  "productName": "EzDemo",
  "description": "Learn and Demo HPE Ezmeral",
  "version": "0.1.1-b",
  "private": false,
  "main": "./public/electron.js",
  "homepage": "./",
  "dependencies": {
    "aws-sdk": "^2.1223.0",
    "electron-is-dev": "^2.0.0",
    "fix-path": "^4.0.0",
    "node-ansible": "^0.5.5"
  },
  "build": {
    "appId": "ezdemo.hpe",
    "files": [
      "build/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "./public/playbooks",
        "to": "playbooks",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "public/icons/icon.icns",
      "target": "dmg",
      "defaultArch": "universal"
    },
    "win": {
      "publish": [
        "github"
      ],
      "icon": "public/icons/logo512_sq.png",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "scripts": {
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder -wlm",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none yarn start\" \"yarn:electron\"",
    "electron": "electronmon .",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder -wlm -p always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.19.1",
    "@babel/plugin-syntax-flow": "7.18.6",
    "@babel/plugin-transform-react-jsx": "7.19.0",
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-dmg": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.4",
    "electron-builder": "^23.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "electronmon": "^2.0.2",
    "grommet": "^2.25.3",
    "grommet-icons": "^4.8.0",
    "grommet-theme-hpe": "^3.3.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-devtools": "^4.26.1",
    "react-dom": "^18.2.0",
    "react-is": "18.2.0",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "source-map-explorer": "^2.5.3",
    "styled-components": "^5.3.5",
    "typescript": "4.8.3"
  },
  "electronmon": {
    "patterns": [
      "!**/**.json",
      "!**/**.ini",
      "!**/**.pem"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "arch": [
          "x64",
          "arm64"
        ],
        "platform": [
          "linux",
          "mac",
          "win32"
        ],
        "darwinDarkModeSupport": true,
        "icon": "public/icons/icon",
        "prune": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "EZdemo",
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "EZdemo"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "EZdemo",
            "options": {
              "icon": "public/icons/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "EZdemo",
            "options": {
              "icon": "public/icons/icon.png"
            }
          }
        }
      ]
    }
  }
}